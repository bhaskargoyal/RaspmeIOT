<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Relative"
    android:backgroundTint="#006699"
    android:background="#006699">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textSignIn"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="Sign In"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editRaspID"
                    android:layout_gravity="center"
                    android:autoText="false"
                    android:layout_marginTop="100dp"
                    android:hint="Raspberry Pi Id"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:focusableInTouchMode="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:longClickable="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Enter Raspberry ID"
                    android:id="@+id/buttonRaspID"
                    android:layout_marginTop="20dp"
                    android:background="#B3E5FC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Wanna BUY?"
                    android:id="@+id/textBuy"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="170dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Connection"
                    android:id="@+id/modeOfConnection"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
